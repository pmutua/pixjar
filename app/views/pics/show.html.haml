#pic_show.row
	.col-md-6.col-md-offset-3
		.panel.panel-default
			.panel.heading.pic_image
				= image_tag @pic.image.url
			.panel-body
				%h1= @pic.title
				%p= @pic.description

			.panel-footer
				.row
					.col-md-6
						%p.user
						by
						= @pic.user.email
					.col.md-6
						.btn-group.pull-right
							- if user_signed_in?

								= link_to "Back", root_path, class: "btn btn-info"
								= link_to "Edit", edit_pic_path, class: "btn btn-success"
								= link_to "Delete", pic_path, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger"
